@using System.Security.Claims;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">OleToFood</a>
            </div>
            <div class="navbar navbar-nav navbar-right" >
                @if (User.IsSignedIn())
                {

                    <div>@User.GetUserName()</div>
                    <form asp-controller="Account" asp-action="Logout" method="post"class="navbar-form">
                        <input type="submit" value="Logout"  class="btn btn-danger"/>
                    </form>
                }
                else
                {
                    <a class="btn btn-default btn-xs navbar-btn" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="btn btn-default btn-xs navbar-btn" asp-controller="Account" asp-action="Register">Register</a>
                }
            </div>
            <div class="container">
                @RenderBody()
                <footer>
                    @RenderSection("footer", false)
                    @Component.Invoke("Greeting")
                </footer>
            </div>
        </div>
    </nav>


    
   
</body>
</html>
